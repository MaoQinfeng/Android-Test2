<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/diary_author"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_weight="1"
        android:background="#00BCD4"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/diary_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#00BCD4"
        android:gravity="center"
        android:hint="在这儿写题目哦"
        android:padding="10dp"
        android:textSize="20sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        />

    <EditText
        android:id="@+id/diary_content1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@drawable/jj"
        android:hint="在这儿写内容哦"
        android:lines="10"
        android:padding="15dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/picture_path"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/jj" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="5">

        <ImageView
            android:id="@+id/picture"
            android:layout_width="89dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:background="@drawable/u" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/add_button1"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_weight="1"

                android:text="拍照"
                android:textSize="20sp" />
            <Button
                android:id="@+id/add_button2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:text="从相册中选择"/>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/diary_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/delete_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="删除"
            android:textSize="14sp" />

        <Button
            android:id="@+id/edit_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="编辑"
            android:textSize="14sp" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="保存"
            android:textSize="14sp" />

        <Button
            android:id="@+id/return_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="返回"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>

